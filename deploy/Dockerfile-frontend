FROM node:20-alpine AS build
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source
COPY . .

# Build-time configuration (can be overridden by --build-arg)
ARG VITE_KOALA_BASE_URL=/api
ARG VITE_ENABLE_MOCK=false
ARG VITE_KOALA_LOGIN_KEY
ARG VITE_KOALA_SENSITIVE_KEY
ENV VITE_KOALA_BASE_URL=${VITE_KOALA_BASE_URL}
ENV VITE_ENABLE_MOCK=${VITE_ENABLE_MOCK}
ENV VITE_KOALA_LOGIN_KEY=${VITE_KOALA_LOGIN_KEY}
ENV VITE_KOALA_SENSITIVE_KEY=${VITE_KOALA_SENSITIVE_KEY}

# Build static assets (skip type-check to avoid CI fail)
RUN npm run build:docker

# Serve with Nginx
FROM nginx:1.27-alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY deploy/nginx-frontend.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
