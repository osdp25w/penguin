server {
  listen 80;
  server_name _;
  root /usr/share/nginx/html;
  index index.html;

  # 不快取入口 HTML，避免舊版入口引到不存在的 chunk
  location = /index.html {
    add_header Cache-Control "no-store, no-cache, must-revalidate, max-age=0" always;
  }

  # Fernet encryption service (must come before generic /api/)
  location /api/fernet/ {
    proxy_pass http://penguin-fernet:3001;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Connection "";
  }

  # API reverse proxy to koala service in koala namespace
  location /api/ {
    proxy_pass http://koala.koala.svc.cluster.local;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Connection "";
    
    # 加入自訂 header 顯示實際後端資訊
    add_header X-Backend-Service "koala.osdp25w.xyz" always;
    add_header X-K8s-Service "koala.koala.svc.cluster.local" always;
    add_header X-Proxied-By "penguin-nginx" always;
  }

  # Runtime config should never be cached
  location /config/ {
    add_header Cache-Control "no-store, no-cache, must-revalidate, max-age=0";
  }

  # SPA fallback
  location / {
    add_header Cache-Control "no-store, no-cache, must-revalidate, max-age=0" always;
    try_files $uri /index.html;
  }

  # Cache static assets
  location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
    expires 1y;
    add_header Cache-Control "public, immutable";
  }
}
